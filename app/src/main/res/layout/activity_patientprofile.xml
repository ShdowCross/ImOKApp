<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfile"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@color/MainBackground"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Back"
                android:layout_marginLeft="25dp"
                android:layout_weight="0.25"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:backgroundTint="#9FA6B2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:padding="30dp"
                android:gravity="center"
                android:textSize="36dp"
                android:text="Profile"/>
            <Button
                android:id="@+id/medical_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.25"
                android:layout_marginHorizontal="25dp"
                android:layout_gravity="center_vertical|end"
                android:text="Medical contacts" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.4"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/patientImage"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/bubble_border">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:src="@mipmap/profile" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/patientBrief"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="21px"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:background="@drawable/bubble_border"
                >
                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="20px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userNameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Name: "/>
                        <TextView
                            android:id="@+id/userNameData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="John Doe" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userGenderTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Gender: "/>
                        <TextView
                            android:id="@+id/userGenderData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Male"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userAgeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="DOB(Age): "/>
                        <TextView
                            android:id="@+id/userAgeData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="21 June 1963 (60)"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.4"
                    android:id="@+id/userRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_margin="20px">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userBloodTypeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Blood Type: "/>
                        <TextView
                            android:id="@+id/userBloodTypeData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="A+"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userBMITitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="BMI: "/>

                        <TextView
                            android:id="@+id/userBMIData"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="24dp"
                            android:text="24.7 (Normal)" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/userAllergiesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Allergies: "/>
                        <TextView
                            android:id="@+id/userAllergiesData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Peanuts"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/userDetails"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:background="@drawable/bubble_border">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:padding="20px">
                <TextView
                    android:id="@+id/userMedicalHistoryTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:padding="20px"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:text="Medical History:" />

                <TextView
                    android:id="@+id/userMedicalHistoryData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:padding="20px"
                    android:gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:textSize="24dp"
                    android:text="Hypertension (diagnosed in 2010) Type 2 diabetes (diagnosed in 2012) High cholesterol levels (diagnosed in 2014) Seasonal allergies (mild)" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="20px"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/userVaccinationHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:padding="20px"
                    android:textSize="24dp"
                    android:gravity="center_vertical"
                    android:text="Vaccination History:" />
                <TextView
                    android:id="@+id/userVaccinationHistoryData"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:padding="20px"
                    android:textSize="24dp"
                    android:gravity="center_vertical"
                    android:text="COVID-19 Vaccine: Pfizer-BioNTech (2 doses, completed on April 1, 2023) Influenza Vaccine: Received annually (last received on October 15, 2022)"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>