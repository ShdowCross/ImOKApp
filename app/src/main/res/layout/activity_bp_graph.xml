<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BpGraph"
    android:layout_margin="10dp"
    android:background="@color/MainBackground"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Back"
            android:layout_weight="0.14"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:textColor="@color/white"
            android:backgroundTint="#9FA6B2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="36dp"
            android:text="Blood Pressure"/>
        <ImageView
            android:id="@+id/profilePictureIV"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.06"
            android:background="@mipmap/profile"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical|end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/Information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:background="@drawable/bubble_border"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/bloodPressureIV"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/blood_pressure"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/lastReadingTitleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textSize="28dp"
                        android:textColor="@color/black"
                        android:text="Last Reading: "/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lastReadingSystolicTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:textSize="32dp"
                            android:textColor="@color/black"
                            android:text="-"/>
                        <TextView
                            android:id="@+id/lastReadingSlashTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="32dp"
                            android:textColor="@color/black"
                            android:text=" / "/>
                        <TextView
                            android:id="@+id/lastReadingDiastolicTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="32dp"
                            android:textColor="@color/black"
                            android:text="-"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/diagnosisTV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:text="No data available"/>
                <LinearLayout
                    android:id="@+id/diagnosisLL"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/bubble_border"
                    android:visibility="invisible"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/diagnosisSurveyTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.85"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bubble_border">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/BpChart"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:text="Enter New Values: "/>
                <EditText
                    android:id="@+id/EntrySystolicET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="28dp"
                    android:hint="Systolic"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:text=" / "/>
                <EditText
                    android:id="@+id/EntryDiastolicET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="28dp"
                    android:hint="Diastolic"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_gravity="end"
                    android:layout_marginLeft="40dp">
                    <Button
                        android:id="@+id/submitBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:backgroundTint="#14A44D"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>