<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackground"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="10dp"
        android:text="Add someone you know!"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.86"
        android:gravity="center"
        android:background="@drawable/black_border"
        android:layout_margin="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bubble_border"
                android:orientation="horizontal">
                <!-- TextView for Name -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name:"/>

                <!-- EditText for Name -->
                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:text=""/>
            </LinearLayout>
            <!-- TextView for Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bubble_border"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Title:"/>

                <!-- EditText for Title -->
                <EditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bubble_border"
                android:orientation="horizontal">
                <!-- TextView for Phone Number -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Phone Number:"/>

                <!-- EditText for Phone Number -->
                <EditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="phone" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bubble_border"
                android:orientation="horizontal">
                <!-- TextView for Email -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

                <!-- EditText for Email -->
                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/bubble_border"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                    <!-- TextView for Street -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="Street"/>

                    <!-- EditText for Street -->
                    <EditText
                        android:id="@+id/editTextStreet"
                        android:layout_width="match_parent"
                        android:layout_weight="0.7"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="15dp"
                        android:inputType="text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginRight="40dp">
                        <!-- TextView for Unit -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.3"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="Unit"/>

                        <!-- EditText for Unit -->
                        <EditText
                            android:id="@+id/editTextUnit"
                            android:layout_width="100dp"
                            android:layout_weight="0.7"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="30dp"
                            android:gravity="center"
                            android:inputType="text"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="40dp">
                        <!-- TextView for Postal Code -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="0.3"
                            android:layout_height="0dp"
                            android:text="Postal Code"/>

                        <!-- EditText for Postal Code -->
                        <EditText
                            android:id="@+id/editTextPostal"
                            android:layout_width="100dp"
                            android:layout_weight="0.7"
                            android:layout_marginHorizontal="30dp"
                            android:layout_height="0dp"
                            android:inputType="text" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>