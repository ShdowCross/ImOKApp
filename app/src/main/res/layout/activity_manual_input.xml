<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualInput"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manualInputTV"
        android:gravity="center"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Manual Input"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fullNameTV"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Full Name"/>

                <TextView
                    android:id="@+id/weightTV"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Weight (kg)"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fullNameET"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Thomas Tan Wei Jie"/>

                <EditText
                    android:id="@+id/weightET"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="54.5"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/heartRateTV"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Heart Rate (bpm)"/>

                <TextView
                    android:id="@+id/bloodPressureTV"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Blood Pressure (mmHg)"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/heartRateET"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="75"/>

                <EditText
                    android:id="@+id/bloodPressureET"
                    android:gravity="center"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="126/82"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/saveBtn"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:backgroundTint="#00A31A"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:padding="30dp"
                    android:layout_margin="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:backgroundTint="#D9D9D9"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>